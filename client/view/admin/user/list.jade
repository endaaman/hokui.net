table.table(v-if="users && classYears")
    thead
        tr
            th ID
            th.text-left HN
            th.text-left 本名
            th.text-left.hidden-xs-sm Email
            th
                | 期

            th
                | 状態

    tr(v-for="user in users" track-by="id")
        td.text-center {{user.id}}
            
        td.allbr
            a(v-link="'/admin/user/' + user.id") {{user.handle_name}}
            td {{user.family_name + ' ' + user.given_name}}
        td.hidden-xs-sm {{user.email | omitDomain}}
        td.text-center
            a(v-link="'/admin/class_year/' + user.class_year_id")
                | {{cyLabel(user.class_year_id)}}
                span.hidden-xs-sm 期
        td.text-center
            //- status-icon(user="{{user}}")
